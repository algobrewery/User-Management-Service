{
    "family": "user-management-service",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::<YOUR-ACCOUNT-ID>:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::<YOUR-ACCOUNT-ID>:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "user-management-service",
            "image": "<YOUR-ACCOUNT-ID>.dkr.ecr.<YOUR-REGION>.amazonaws.com/user-management-service:latest",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "SPRING_PROFILES_ACTIVE",
                    "value": "prod"
                },
                {
                    "name": "SPRING_DATASOURCE_URL",
                    "value": "jdbc:postgresql://mytest.culss6gmw8na.us-east-1.rds.amazonaws.com:5432/postgres"
                },
                {
                    "name": "SPRING_DATASOURCE_USERNAME",
                    "value": "postgres"
                },
                {
                    "name": "SPRING_DATASOURCE_PASSWORD",
                    "value": "Sindhuj12"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/user-management-service",
                    "awslogs-region": "<YOUR-REGION>",
                    "awslogs-stream-prefix": "ecs"
                }
            }
        }
    ]
} 