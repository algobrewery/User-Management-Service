{
  "family": "user-management-service-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::038462789766:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::038462789766:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "user-management-service",
      "image": "038462789766.dkr.ecr.us-east-1.amazonaws.com/user-management-service:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "prod"
        },
        {
          "name": "DB_HOST_PROD",
          "value": "user-management-prod-db.culss6gmw8na.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_NAME_PROD",
          "value": "usermanagement_prod"
        },
        {
          "name": "DB_USERNAME_PROD",
          "value": "postgres"
        },
        {
          "name": "DB_PASSWORD_PROD",
          "value": "tasksilodbtest"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/user-management-service-prod",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
